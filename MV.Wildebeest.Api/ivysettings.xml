<ivysettings>

  <resolvers>
    <ibiblio name="public" m2compatible="true"/>

    <!--
      Defines the project-level repository at the same level as the component directories - basedir is inherited from
      the running Ant context
    -->
    <filesystem name="project">
      <ivy pattern="${basedir}/../repo/[organisation].[module]/ivy-[revision].xml" />
      <artifact pattern="${basedir}/../repo/[organisation].[module]/[artifact]-[revision].[ext]" />
    </filesystem>
  </resolvers>

</ivysettings>
